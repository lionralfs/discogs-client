{
    "include": ["lib/**/*"],
    "exclude": ["test/**/*"],
    "compilerOptions": {
        "target": "es2017",
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "types",
        "allowJs": false,
        "declaration": true,
        "emitDeclarationOnly": true,
        "strict": true,
        "lib": ["dom", "dom.iterable", "esnext"],
        "downlevelIteration": true,
        "typeRoots": ["./test/@types", "./node_modules/@types"],
        "skipLibCheck": true
    }
}
